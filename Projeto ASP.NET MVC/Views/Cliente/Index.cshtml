@model CRUDMVC.Models.Cliente;

@{
    ViewData["Title"] = "Cliente";
    var clientes = ViewData["clientes"] as List<Cliente>;
}



<div class="container">
    <h1>Gerenciamento de Clientes</h1>
    <div class="row">
        <div class="col-md-12">

            <h2>Clientes Cadastrados</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Endereco</th>
                        <th>Telefone</th>
                        <th>CPF</th>
                        <th>Sexo</th>
                        <th>Idade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cliente in clientes)
                        {
                            <tr>
                                <td>@cliente.Id</td>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Endereco</td>
                                <td>@cliente.Telefone</td>
                                <td>@cliente.CPF</td>
                                <td>@cliente.Sexo</td>
                                <td>@cliente.Idade</td>
                                <td style="text-align:right">
                                <form asp-controller="Cliente" asp-action="Deletar">
                                    <button class="btn btn-danger" type="submit">x</button>
                                    <input asp-for="Id" style="visibility:hidden; display:none;" type="text" value="@cliente.Id">
                                    
                                </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <br />
            <h2>Cadastrar</h2>
            <form asp-controller="Cliente" asp-action="Index">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="">Nome completo</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Nome do Cliente">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Endereço</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="" placeholder="Endereço">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="Telefone">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" id="" placeholder="CPF">
                    </div>
                    <!--
                    <div class="form-group col-md-3">
                        <label for="">Sexo</label>
                        <input asp-for="Sexo" type="date" class="form-control" id="" placeholder="Telefone">
                    </div> 
                    -->
                    <div class="form-group col-md-3">
                        <label for="">Sexo</label>
                        <select class="custom-select" asp-for="Sexo">
                            <option selected>-</option>
                            <option>M</option>
                            <option>F</option>
                        </select>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="">Idade</label>
                        <input asp-for="Idade" type="number" class="form-control" id="" placeholder="Idade">
                    </div>

                </div>
                <button type="submit" class="btn btn-success">Incluir</button>
            </form>
            <br />
            <hr />
            <br />
            <h2>Atualizar Dados</h2>
            <form asp-controller="Cliente" asp-action="Atualizar">

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="">Código do cliente</label>
                        <select class="custom-select" asp-for="Id">
                            <option selected>-- Selecione um código</option>
                            @{
                                foreach (var cliente in clientes)
                                {
                                    <option>@cliente.Id</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Nome completo</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Nome do Cliente">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Endereço</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="" placeholder="Endereço">
                    </div>
                      <div class="form-group col-md-3">
                        <label for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="Telefone">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" id="" placeholder="CPF">
                    </div>
                    <!--
                    <div class="form-group col-md-3">
                        <label for="">Sexo</label>
                        <input asp-for="Sexo" type="date" class="form-control" id="" placeholder="Telefone">
                    </div> 
                    -->
                    <div class="form-group col-md-3">
                        <label for="">Sexo</label>
                        <select class="custom-select" asp-for="Sexo">
                            <option selected>-</option>
                            <option>M</option>
                            <option>F</option>
                        </select>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="">Idade</label>
                        <input asp-for="Idade" type="number" class="form-control" id="" placeholder="Idade">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>
            <br/>
        </div>
    </div>
</div>