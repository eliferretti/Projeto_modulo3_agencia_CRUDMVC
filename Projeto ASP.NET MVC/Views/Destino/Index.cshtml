@model CRUDMVC.Models.Destino;

@{
    ViewData["Title"] = "Destino";
    var destinos = ViewData["destinos"] as List<Destino>;
}



<div class="container">
    <h1>Gerenciamento de Destinos</h1>
    <br/>
    <div class="row">
        <div class="col-md-12">

            <h2>Destinos Cadastrados</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                        <th>Tipo</th>
                        <th>Promo</th>
                        <th>Tipo</th>
                        <th>Preço</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var destino in destinos)
                        {
                            <tr>
                                <td>@destino.Id</td>
                                <td>@destino.Titulo</td>
                                <td>@destino.Descricao</td>
                                <td>@destino.Promo</td>
                                <td>@destino.Tipo</td>
                                <td>@destino.Preco</td>
                   
                                <td style="text-align:right;">
                                <form asp-controller="Destino" asp-action="Deletar">
                                    <button class="btn btn-danger" type="submit">X</button>
                                    <input asp-for="Id" style="visibility:hidden; display:none;" type="text" value="@destino.Id">
                                </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <br />
            <h2>Cadastrar</h2>
            <form asp-controller="Destino" asp-action="Index">
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label for="">Título</label>
                        <input asp-for="Titulo" type="text" class="form-control" id="" placeholder="Título do destino">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Descrição</label>
                        <input asp-for="Descricao" type="text" class="form-control" id="" placeholder="Descrição do destino">
                    </div>
                    <div class="form-group col-md-1">
                        <label for="">Promo</label>
                        <select class="custom-select" asp-for="Promo">
                            <option selected>-</option>
                            <option>Não</option>
                            <option>Sim</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1">
                        <label for="">Tipo</label>
                        <select class="custom-select" asp-for="Tipo">
                            <option selected>-</option>
                            <option>Nac</option>
                            <option>Int</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1">
                        <label for="">Preço</label>
                        <input asp-for="Preco" type="text" class="form-control" id="" placeholder="Preço">
                    </div>
                    
                </div>
                <button type="submit" class="btn btn-success">Incluir</button>
            </form>
            <br />
            <hr />
            <br />
            <h2>Atualizar Dados</h2>
            <form asp-controller="Destino" asp-action="Atualizar">

                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label for="">Código do destino</label>
                        <select class="custom-select" asp-for="Id">
                            <option selected>-- Selecione um código</option>
                            @{
                                foreach (var destino in destinos)
                                {
                                    <option>@destino.Id</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="">Título</label>
                        <input asp-for="Titulo" type="text" class="form-control" id="" placeholder="Título do destino">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Descrição</label>
                        <input asp-for="Descricao" type="text" class="form-control" id="" placeholder="Descrição do destino">
                    </div>
                    <div class="form-group col-md-1">
                        <label for="">Promo</label>
                        <select class="custom-select" asp-for="Promo">
                            <option selected>-</option>
                            <option>Não</option>
                            <option>Sim</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1">
                        <label for="">Tipo</label>
                        <select class="custom-select" asp-for="Tipo">
                            <option selected>-</option>
                            <option>Nac</option>
                            <option>Int</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1">
                        <label for="">Preço</label>
                        <input asp-for="Preco" type="text" class="form-control" id="" placeholder="Preço">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>
            <br />
        </div>
    </div>
</div>